<UserControl x:Class="NetworkService.Views.NetworkDisplayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkService.Views" xmlns:model="clr-namespace:NetworkService.Model"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="600">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - TreeView with Entities -->
        <Border Grid.Column="0" 
                Background="White" 
                BorderBrush="#D8DEE9" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="10"
                Margin="0,0,5,0">
            <StackPanel>
                <TextBlock Text="🌳 Available Entities" 
                          FontSize="14" 
                          FontWeight="SemiBold" 
                          Foreground="#2E3440" 
                          Margin="0,0,0,10"/>

                <TreeView Name="EntitiesTreeView" 
                          ItemsSource="{Binding GroupedEntities}"
                          Background="Transparent"
                          BorderThickness="0"
                          Height="680">

                    <!-- Group Level (EntityType) -->
                    <TreeView.Resources>
                        <HierarchicalDataTemplate DataType="{x:Type local:EntityGroup}" 
                                                  ItemsSource="{Binding Entities}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📂" FontSize="14" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding TypeName}" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Count, StringFormat=' ({0})'}" 
                                          Foreground="#4C566A" 
                                          FontSize="11"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>

                        <!-- Entity Level -->
                        <DataTemplate DataType="{x:Type model:PowerConsumptionEntity}">
                            <Border Background="#F5F5F5" 
                                    BorderBrush="#D8DEE9" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="8"
                                    Margin="0,2"
                                    MouseLeftButtonDown="Entity_MouseLeftButtonDown">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" 
                                              FontWeight="SemiBold" 
                                              FontSize="11"/>
                                    <TextBlock Text="{Binding Id, StringFormat='ID: {0}'}" 
                                              FontSize="10" 
                                              Foreground="#4C566A"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </TreeView.Resources>
                </TreeView>
            </StackPanel>
        </Border>

        <!-- Right Panel - Drag & Drop Grid -->
        <Border Grid.Column="1" 
                Background="White" 
                BorderBrush="#D8DEE9" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="10">
            <StackPanel>
                <TextBlock Text="🌐 Network Display Grid" 
                          FontSize="16" 
                          FontWeight="SemiBold" 
                          Foreground="#2E3440" 
                          Margin="0,0,0,10"/>

                <!-- 4x3 Grid of Canvas Elements -->
                <Grid Name="NetworkGrid" Height="600">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="140"/>
                        <RowDefinition Height="140"/>
                        <RowDefinition Height="140"/>
                        <RowDefinition Height="140"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>

                    <!-- Row 0 -->
                    <Canvas Grid.Row="0" Grid.Column="0" 
                            Name="Canvas_0_0"
                            Background="Transparent" 
                            Margin="2,4,4,4" 
                            AllowDrop="True"
                            DragOver="Canvas_DragOver"
                            Drop="Canvas_Drop"
                            MouseRightButtonDown="Canvas_MouseRightButtonDown">
                        <Border BorderBrush="#D8DEE9" 
                                BorderThickness="2"
                                Width="110" 
                                Height="130" 
                                CornerRadius="8">
                            <TextBlock Text="Drop Here" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" 
                                      FontSize="12" 
                                      Foreground="#4C566A"/>
                        </Border>
                    </Canvas>

                    <Canvas Grid.Row="0" Grid.Column="1" 
                            Name="Canvas_0_1"
                            Background="Transparent" 
                            Margin="4" 
                            AllowDrop="True"
                            DragOver="Canvas_DragOver"
                            Drop="Canvas_Drop"
                            MouseRightButtonDown="Canvas_MouseRightButtonDown">
                        <Border BorderBrush="#D8DEE9" 
                                BorderThickness="2" 
                                Width="110" 
                                Height="130" 
                                CornerRadius="8">
                            <TextBlock Text="Drop Here" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" 
                                      FontSize="12" 
                                      Foreground="#4C566A"/>
                        </Border>
                    </Canvas>

                    <Canvas Grid.Row="0" Grid.Column="2" 
                            Name="Canvas_0_2"
                            Background="Transparent" 
                            Margin="4,4,2,4" 
                            AllowDrop="True"
                            DragOver="Canvas_DragOver"
                            Drop="Canvas_Drop"
                            MouseRightButtonDown="Canvas_MouseRightButtonDown">
                        <Border BorderBrush="#D8DEE9" 
                                BorderThickness="2" 
                                Width="110" 
                                Height="130" 
                                CornerRadius="8">
                            <TextBlock Text="Drop Here" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" 
                                      FontSize="12" 
                                      Foreground="#4C566A"/>
                        </Border>
                    </Canvas>

                    <!-- Row 1 -->
                    <Canvas Grid.Row="1" Grid.Column="0" 
                            Name="Canvas_1_0"
                            Background="Transparent" 
                            Margin="4" 
                            AllowDrop="True"
                            DragOver="Canvas_DragOver"
                            Drop="Canvas_Drop"
                            MouseRightButtonDown="Canvas_MouseRightButtonDown">
                        <Border BorderBrush="#D8DEE9" 
                                BorderThickness="2" 
                               
                                Width="110" 
                                Height="130" 
                                CornerRadius="8">
                            <TextBlock Text="Drop Here" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" 
                                      FontSize="12" 
                                      Foreground="#4C566A"/>
                        </Border>
                    </Canvas>

                    <Canvas Grid.Row="1" Grid.Column="1" 
                            Name="Canvas_1_1"
                            Background="Transparent" 
                            Margin="4" 
                            AllowDrop="True"
                            DragOver="Canvas_DragOver"
                            Drop="Canvas_Drop"
                            MouseRightButtonDown="Canvas_MouseRightButtonDown">
                        <Border BorderBrush="#D8DEE9" 
                                BorderThickness="2" 
                                
                                Width="110" 
