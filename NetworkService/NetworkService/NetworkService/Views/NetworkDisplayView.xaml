                                CornerRadius="8">
                            <TextBlock Text="Drop Here" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" 
                                      FontSize="12" 
                                      Foreground="#4C566A"/>
                        </Border>
                    </Canvas>

                    <Canvas Grid.Row="1" Grid.Column="2" 
