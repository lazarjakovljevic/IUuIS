<UserControl x:Class="NetworkService.Views.NetworkDisplayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkService.Views" xmlns:model="clr-namespace:NetworkService.Model"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="600">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - TreeView with Entities -->
        <Border Grid.Column="0" 
                Background="White" 
                BorderBrush="#D8DEE9" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="10"
                Margin="0,0,5,0">
            <StackPanel>
                <TextBlock Text="Available Entities" 
                          FontSize="14" 
                          FontWeight="SemiBold" 
                          Foreground="#2E3440" 
                          Margin="0,0,0,10"/>

                <TreeView Name="EntitiesTreeView" 
                          ItemsSource="{Binding GroupedEntities}"
                          Background="Transparent"
                          BorderThickness="0"
                          Height="680">

                    <TreeView.Resources>
                        <!-- Gasi plavi sistemski highlight -->
                        <Style TargetType="TreeViewItem" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                            <Style.Resources>
                                <!-- Ovime "maskiraš" defaultne highlight boje -->
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
                            </Style.Resources>
                        </Style>

                        <!-- Group Level (EntityType) -->
                        <HierarchicalDataTemplate DataType="{x:Type local:EntityGroup}" 
                                                  ItemsSource="{Binding Entities}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📂" FontSize="14" Margin="0,0,2,0"/>
                                <TextBlock Text="{Binding TypeName}" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Count, StringFormat=' ({0})'}" 
                                           Foreground="#4C566A" 
                                           FontSize="12"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>

                        <!-- Entity Level -->
                        <DataTemplate DataType="{x:Type model:PowerConsumptionEntity}">
                            <Border Background="#F5F5F5" 
                                    BorderBrush="Transparent" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="8,4,8,4"
                                    Margin="-10,2,0,0"
                                    MouseLeftButtonDown="Entity_MouseLeftButtonDown">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontSize="11">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="Normal"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=TreeViewItem}}" Value="True">
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </TreeView.Resources>
                </TreeView>
            </StackPanel>
        </Border>

        <!-- Right Panel - Drag & Drop Grid with Connection Layer -->
        <Border Grid.Column="1" 
                Background="White" 
                BorderBrush="#D8DEE9" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="10">
            <StackPanel>
                <!-- Header with Network Status -->
                <Grid Margin="0,0,0,10">
                    <TextBlock Text="🌐 Network Display Grid" 
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Foreground="#2E3440" 
                              HorizontalAlignment="Left"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="🔗" FontSize="12" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Name="ConnectionStatusText" 
                                  Text="0 connections" 
                                  FontSize="10" 
                                  Foreground="#4C566A"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Container for Grid and Lines - Using a Canvas to overlay lines -->
                <Canvas Name="NetworkContainer" Height="600" Width="360" Background="Transparent">

                    <!-- Canvas for Connection Lines (behind entities) -->
                    <Canvas Name="ConnectionLinesCanvas" 
                            Height="600" 
                            Width="360" 
                            Background="Transparent" 
                            IsHitTestVisible="False"
                            Panel.ZIndex="1"/>

                    <!-- 4x3 Grid of Canvas Elements (in front of lines) -->
                    <Grid Name="NetworkGrid" Height="600" Width="360" Panel.ZIndex="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="140"/>
                            <RowDefinition Height="140"/>
                            <RowDefinition Height="140"/>
                            <RowDefinition Height="140"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <!-- Row 0 -->
                        <Canvas Grid.Row="0" Grid.Column="0" 
                                Name="Canvas_0_0"
                                Background="Transparent" 
                                Margin="2,8,4,4" 
                                AllowDrop="True"
                                DragOver="Canvas_DragOver"
                                Drop="Canvas_Drop"
                                MouseRightButtonDown="Canvas_MouseRightButtonDown">
                            <Border BorderBrush="#D8DEE9" 
                                    BorderThickness="2"
                                    Width="110" 
                                    Height="130" 
                                    CornerRadius="8">
                                <TextBlock Text="Drop Here" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" 
                                          FontSize="12" 
                                          Foreground="#4C566A"/>
                            </Border>
                        </Canvas>

                        <Canvas Grid.Row="0" Grid.Column="1" 
                                Name="Canvas_0_1"
                                Background="Transparent" 
                                Margin="2,8,4,4"  
                                AllowDrop="True"
                                DragOver="Canvas_DragOver"
                                Drop="Canvas_Drop"
                                MouseRightButtonDown="Canvas_MouseRightButtonDown">
                            <Border BorderBrush="#D8DEE9" 
                                    BorderThickness="2" 
                                    Width="110" 
                                    Height="130" 
                                    CornerRadius="8">
                                <TextBlock Text="Drop Here" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" 
                                          FontSize="12" 
                                          Foreground="#4C566A"/>
                            </Border>
                        </Canvas>

                        <Canvas Grid.Row="0" Grid.Column="2" 
                                Name="Canvas_0_2"
                                Background="Transparent" 
                                Margin="2,8,4,4" 
                                AllowDrop="True"
                                DragOver="Canvas_DragOver"
                                Drop="Canvas_Drop"
                                MouseRightButtonDown="Canvas_MouseRightButtonDown">
                            <Border BorderBrush="#D8DEE9" 
                                    BorderThickness="2" 
                                    Width="110" 
                                    Height="130" 
                                    CornerRadius="8">
                                <TextBlock Text="Drop Here" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" 
                                          FontSize="12" 
                                          Foreground="#4C566A"/>
                            </Border>
                        </Canvas>

                        <!-- Row 1 -->
                        <Canvas Grid.Row="1" Grid.Column="0" 
                                Name="Canvas_1_0"
                                Background="Transparent" 
                                Margin="2,8,4,4" 
                                AllowDrop="True"
                                DragOver="Canvas_DragOver"
                                Drop="Canvas_Drop"
                                MouseRightButtonDown="Canvas_MouseRightButtonDown">
                            <Border BorderBrush="#D8DEE9" 
                                    BorderThickness="2" 
                                    Width="110" 
                                    Height="130" 
                                    CornerRadius="8">
                                <TextBlock Text="Drop Here" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" 
                                          FontSize="12" 
                                          Foreground="#4C566A"/>
                            </Border>
                        </Canvas>

                        <Canvas Grid.Row="1" Grid.Column="1" 
                                Name="Canvas_1_1"
                                Background="Transparent" 
                                Margin="2,8,4,4" 
                                AllowDrop="True"
                                DragOver="Canvas_DragOver"
                                Drop="Canvas_Drop"
                                MouseRightButtonDown="Canvas_MouseRightButtonDown">
                            <Border BorderBrush="#D8DEE9" 
                                    BorderThickness="2" 
                                    Width="110" 
                                    Height="130" 
                                    CornerRadius="8">
                                <TextBlock Text="Drop Here" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" 
                                          FontSize="12" 
                                          Foreground="#4C566A"/>
                            </Border>
                        </Canvas>

                        <Canvas Grid.Row="1" Grid.Column="2" 
                                Name="Canvas_1_2"
                                Background="Transparent" 
                                Margin="2,8,4,4" 
                                AllowDrop="True"
                                DragOver="Canvas_DragOver"
                                Drop="Canvas_Drop"
                                MouseRightButtonDown="Canvas_MouseRightButtonDown">
                            <Border BorderBrush="#D8DEE9" 
                                    BorderThickness="2" 
                                    Width="110" 
                                    Height="130" 
                                    CornerRadius="8">
                                <TextBlock Text="Drop Here" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" 
                                          FontSize="12" 
                                          Foreground="#4C566A"/>
                            </Border>
                        </Canvas>

                        <!-- Row 2 -->
                        <Canvas Grid.Row="2" Grid.Column="0" 
                                Name="Canvas_2_0"
                                Background="Transparent" 
                                Margin="2,8,4,4" 
                                AllowDrop="True"
                                DragOver="Canvas_DragOver"
                                Drop="Canvas_Drop"
                                MouseRightButtonDown="Canvas_MouseRightButtonDown">
                            <Border BorderBrush="#D8DEE9" 
                                    BorderThickness="2" 
                                    Width="110" 
                                    Height="130" 
                                    CornerRadius="8">
                                <TextBlock Text="Drop Here" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" 
                                          FontSize="12" 
                                          Foreground="#4C566A"/>
                            </Border>
                        </Canvas>

                        <Canvas Grid.Row="2" Grid.Column="1" 
                                Name="Canvas_2_1"
                                Background="Transparent" 
                                Margin="2,8,4,4" 
                                AllowDrop="True"
                                DragOver="Canvas_DragOver"
                                Drop="Canvas_Drop"
                                MouseRightButtonDown="Canvas_MouseRightButtonDown">
                            <Border BorderBrush="#D8DEE9" 
                                    BorderThickness="2" 
                                    Width="110" 
                                    Height="130" 
                                    CornerRadius="8">
                                <TextBlock Text="Drop Here" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" 
                                          FontSize="12" 
                                          Foreground="#4C566A"/>
                            </Border>
                        </Canvas>

                        <Canvas Grid.Row="2" Grid.Column="2" 
                                Name="Canvas_2_2"
                                Background="Transparent" 
                                Margin="2,8,4,4" 
                                AllowDrop="True"
                                DragOver="Canvas_DragOver"
                                Drop="Canvas_Drop"
                                MouseRightButtonDown="Canvas_MouseRightButtonDown">
                            <Border BorderBrush="#D8DEE9" 
                                    BorderThickness="2" 
                                    Width="110" 
                                    Height="130" 
                                    CornerRadius="8">
                                <TextBlock Text="Drop Here" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" 
                                          FontSize="12" 
                                          Foreground="#4C566A"/>
                            </Border>
                        </Canvas>

                        <!-- Row 3 -->
                        <Canvas Grid.Row="3" Grid.Column="0" 
                                Name="Canvas_3_0"
                                Background="Transparent" 
                                Margin="2,8,4,4" 
                                AllowDrop="True"
                                DragOver="Canvas_DragOver"
                                Drop="Canvas_Drop"
                                MouseRightButtonDown="Canvas_MouseRightButtonDown">
                            <Border BorderBrush="#D8DEE9" 
                                    BorderThickness="2" 
                                    Width="110" 
                                    Height="130" 
                                    CornerRadius="8">
                                <TextBlock Text="Drop Here" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" 
                                          FontSize="12" 
                                          Foreground="#4C566A"/>
                            </Border>
                        </Canvas>

                        <Canvas Grid.Row="3" Grid.Column="1" 
                                Name="Canvas_3_1"
                                Background="Transparent" 
                                Margin="2,8,4,4" 
                                AllowDrop="True"
                                DragOver="Canvas_DragOver"
                                Drop="Canvas_Drop"
                                MouseRightButtonDown="Canvas_MouseRightButtonDown">
                            <Border BorderBrush="#D8DEE9" 
                                    BorderThickness="2" 
                                    Width="110" 
                                    Height="130" 
                                    CornerRadius="8">
                                <TextBlock Text="Drop Here" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" 
                                          FontSize="12" 
                                          Foreground="#4C566A"/>
                            </Border>
                        </Canvas>

                        <Canvas Grid.Row="3" Grid.Column="2" 
                                Name="Canvas_3_2"
                                Background="Transparent" 
                                Margin="2,8,4,4" 
                                AllowDrop="True"
                                DragOver="Canvas_DragOver"
                                Drop="Canvas_Drop"
                                MouseRightButtonDown="Canvas_MouseRightButtonDown">
                            <Border BorderBrush="#D8DEE9" 
                                    BorderThickness="2" 
                                    Width="110" 
                                    Height="130" 
                                    CornerRadius="8">
                                <TextBlock Text="Drop Here" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" 
                                          FontSize="12" 
                                          Foreground="#4C566A"/>
                            </Border>
                        </Canvas>

                    </Grid>
                </Canvas>

                <!-- Network Controls -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" 
                            Name="ToggleConnectionsButton"
                            Content="🔗 Toggle Lines" 
                            Background="#5E81AC" 
                            Foreground="White" 
                            Height="30" 
                            BorderThickness="0" 
                            Click="ToggleConnectionsButton_Click"
                            Cursor="Hand"
                            Margin="0,0,5,0"
                            ToolTip="Show/Hide connection lines"/>

                    <Button Grid.Column="1" 
                            Name="ClearNetworkButton"
                            Content="🗑️ Clear Network" 
                            Background="#BF616A" 
                            Foreground="White" 
                            Height="30" 
                            BorderThickness="0" 
                            Click="ClearNetworkButton_Click"
                            Cursor="Hand"
                            Margin="5,0,0,0"
                            ToolTip="Remove all entities from network"/>
                </Grid>

            </StackPanel>
        </Border>

    </Grid>
</UserControl>