                                Height="130" 
                                CornerRadius="8">
                            <TextBlock Text="Drop Here" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" 
                                      FontSize="12" 
                                      Foreground="#4C566A"/>
                        </Border>
                    </Canvas>

                    <Canvas Grid.Row="2" Grid.Column="2" 
                            Name="Canvas_2_2"
                            Background="Transparent" 
                            Margin="4" 
                            AllowDrop="True"
                            DragOver="Canvas_DragOver"
                            Drop="Canvas_Drop"
                            MouseRightButtonDown="Canvas_MouseRightButtonDown">
                        <Border BorderBrush="#D8DEE9" 
                                BorderThickness="2" 
                                
                                Width="110" 
                                Height="130" 
                                CornerRadius="8">
                            <TextBlock Text="Drop Here" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" 
                                      FontSize="12" 
                                      Foreground="#4C566A"/>
                        </Border>
                    </Canvas>

                    <!-- Row 3 -->
                    <Canvas Grid.Row="3" Grid.Column="0" 
                            Name="Canvas_3_0"
                            Background="Transparent" 
                            Margin="4" 
                            AllowDrop="True"
                            DragOver="Canvas_DragOver"
                            Drop="Canvas_Drop"
                            MouseRightButtonDown="Canvas_MouseRightButtonDown">
                        <Border BorderBrush="#D8DEE9" 
                                BorderThickness="2" 
                                
                                Width="110" 
                                Height="130" 
                                CornerRadius="8">
                            <TextBlock Text="Drop Here" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" 
                                      FontSize="12" 
                                      Foreground="#4C566A"/>
                        </Border>
                    </Canvas>

                    <Canvas Grid.Row="3" Grid.Column="1" 
                            Name="Canvas_3_1"
                            Background="Transparent" 
                            Margin="4" 
                            AllowDrop="True"
                            DragOver="Canvas_DragOver"
                            Drop="Canvas_Drop"
                            MouseRightButtonDown="Canvas_MouseRightButtonDown">
                        <Border BorderBrush="#D8DEE9" 
                                BorderThickness="2" 
                                
                                Width="110" 
                                Height="130" 
                                CornerRadius="8">
                            <TextBlock Text="Drop Here" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" 
                                      FontSize="12" 
                                      Foreground="#4C566A"/>
                        </Border>
                    </Canvas>

                    <Canvas Grid.Row="3" Grid.Column="2" 
                            Name="Canvas_3_2"
