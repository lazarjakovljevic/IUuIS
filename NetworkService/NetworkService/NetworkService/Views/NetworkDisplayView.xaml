                            <TextBlock Text="Drop Here" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" 
                                      FontSize="12" 
                                      Foreground="#4C566A"/>
                        </Border>
                    </Canvas>

                </Grid>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>