<UserControl x:Class="NetworkService.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkService.Views"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="600">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- Welcome Header -->
            <Border Background="#5E81AC" CornerRadius="10" Padding="20">
                <StackPanel>
                    <TextBlock Text="🏠 Welcome to Network Service" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="White" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,10"/>

                    <TextBlock Text="Infrastructure System Monitoring" 
                              FontSize="16" 
                              Foreground="White" 
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Instructions Card -->
            <Border Background="White" 
                    BorderBrush="#D8DEE9" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="📱 Mobile Interface Guide" 
                              FontSize="18" 
                              FontWeight="SemiBold" 
                              Foreground="#2E3440" 
                              Margin="0,0,0,15"/>

                    <TextBlock TextWrapping="Wrap" 
                              Foreground="#4C566A" 
                              LineHeight="22" 
                              FontSize="14">
                        <Run Text="This application is designed for mobile-style interaction. Use the navigation menu at the bottom to access different features:"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Feature Cards -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Entities Card -->
                <Border Grid.Row="0" 
                        Background="White" 
                        BorderBrush="#D8DEE9" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="15" 
                        Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📊" FontSize="32" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <StackPanel>
                            <TextBlock Text="Network Entities" 
                                      FontWeight="SemiBold" 
                                      FontSize="16" 
                                      Foreground="#2E3440"/>
                            <TextBlock Text="Manage power consumption meters" 
                                      FontSize="12" 
                                      Foreground="#4C566A" 
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Network Display Card -->
                <Border Grid.Row="1" 
                        Background="White" 
                        BorderBrush="#D8DEE9" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="15" 
                        Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🌐" FontSize="32" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <StackPanel>
                            <TextBlock Text="Network Display" 
                                      FontWeight="SemiBold" 
                                      FontSize="16" 
                                      Foreground="#2E3440"/>
                            <TextBlock Text="Visual network layout with drag and drop" 
                                      FontSize="12" 
                                      Foreground="#4C566A" 
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Measurement Graph Card -->
                <Border Grid.Row="2" 
                        Background="White" 
                        BorderBrush="#D8DEE9" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="15">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📈" FontSize="32" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <StackPanel>
                            <TextBlock Text="Measurement Graph" 
                                      FontWeight="SemiBold" 
                                      FontSize="16" 
                                      Foreground="#2E3440"/>
                            <TextBlock Text="Real-time measurement history charts" 
                                      FontSize="12" 
                                      Foreground="#4C566A" 
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Status Info -->
            <Border Background="#EBCB8B" 
                    CornerRadius="8" 
                    Padding="15">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⚡" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="System Status: Active" 
                                  FontWeight="SemiBold" 
                                  Foreground="#2E3440"/>
                        <TextBlock Text="TCP Server listening on port 25675" 
                                  FontSize="12" 
                                  Foreground="#2E3440"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Quick Start -->
            <Border Background="#A3BE8C" 
                    CornerRadius="8" 
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="🚀 Quick Start" 
                              FontWeight="SemiBold" 
                              Foreground="White" 
                              Margin="0,0,0,10"/>
                    <TextBlock TextWrapping="Wrap" 
                              Foreground="White" 
                              FontSize="12" 
                              LineHeight="18">
                        <Run Text="1. Tap 'Entities' to add power consumption meters"/>
                        <LineBreak/>
                        <Run Text="2. Use 'Network' for visual monitoring"/>
                        <LineBreak/>
                        <Run Text="3. Check 'Graph' for measurement history"/>
                    </TextBlock>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>