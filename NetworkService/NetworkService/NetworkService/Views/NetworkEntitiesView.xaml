<UserControl x:Class="NetworkService.Views.NetworkEntitiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkService.Views"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="600">

    <UserControl.Resources>
        <!-- Button Styles -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Background" Value="#5E81AC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4C668A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3E5470"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="#BF616A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#A54E57"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#8B4248"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#D8DEE9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#5E81AC"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#A3BE8C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#D8DEE9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#5E81AC"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#A3BE8C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Row Style -->
        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Filter TextBox Style with Error State -->
        <Style x:Key="FilterTextBox" TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
            <Style.Triggers>
                <!-- Error State - crvena ivica -->
                <DataTrigger Binding="{Binding HasFilterIdError}" Value="True">
                    <Setter Property="BorderBrush" Value="#BF616A"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>
    

    <ScrollViewer x:Name="EntitiesScrollViewer" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- Header -->
            <TextBlock Text="Network Entities Management" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="#2E3440" 
                      Margin="0,0,0,25"/>

            <!-- 1. ENTITIES TABLE -->
            <Border Background="White" 
                    BorderBrush="#D8DEE9" 
                    BorderThickness="1" 
                    Padding="20"
                    CornerRadius="8" 
                    MinHeight="400"
                    Margin="0,0,0,25">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <TextBlock Text="Entities List" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Foreground="#2E3440" 
                                  HorizontalAlignment="Left"/>

                        <Button Content="Delete Selected" 
                               Command="{Binding DeleteEntityCommand}"
                               Style="{StaticResource DangerButton}"
                               HorizontalAlignment="Right"/>
                    </Grid>

                    <DataGrid ItemsSource="{Binding FilteredEntities}" 
                             SelectedItem="{Binding SelectedEntity}"
                             AutoGenerateColumns="False" 
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             GridLinesVisibility="Horizontal"
                             HeadersVisibility="Column"
                             SelectionMode="Single"
                             Height="300"
                             AlternatingRowBackground="#FAFAFA"
                             RowHeight="35"
                             RowStyle="{StaticResource DataGridRowStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" 
                                               Binding="{Binding Id}" 
                                               Width="2*" 
                                               IsReadOnly="True"/>
                            <DataGridTextColumn Header="Name" 
                                               Binding="{Binding Name}" 
                                               Width="5*" 
                                               IsReadOnly="True"/>
                            <DataGridTextColumn Header="Type" 
                                               Binding="{Binding Type.Name}" 
                                               Width="4*" 
                                               IsReadOnly="True"/>
                            <DataGridTextColumn Header="Current Value (kWh)" 
                                               Binding="{Binding CurrentValue, StringFormat=F2}" 
                                               Width="6*" 
                                               IsReadOnly="True"/>
                            <DataGridTextColumn Header="Status" 
                                               Binding="{Binding ValueStatus}" 
                                               Width="4*" 
                                               IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="Alert">
                                                <Setter Property="Foreground" Value="#BF616A"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Trigger>
                                            <Trigger Property="Text" Value="Normal">
                                                <Setter Property="Foreground" Value="#A3BE8C"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- 2. FILTERS -->
            <Border Background="White" 
                    BorderBrush="#D8DEE9" 
                    BorderThickness="1" 
                    Padding="20"
                    CornerRadius="8" 
                    Margin="0,0,0,25">
                <StackPanel>
                    <TextBlock Text="Filter Options" 
                              FontSize="18" 
                              FontWeight="SemiBold" 
                              Foreground="#2E3440" 
                              Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Type Filter -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,15">
                            <TextBlock Text="Filter by Type:" 
                                      FontSize="14" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,8"/>
                            <Grid>
                                <TextBox x:Name="FilterIdTextBox"
                                 Text="{Binding FilterIdValue, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource FilterTextBox}"/>
                                                           
                                <TextBlock Text="Enter ID here..." 
                                          Foreground="Gray" 
                                          VerticalAlignment="Center" 
                                          Margin="12,0,0,0"
                                          IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding FilterIdValue}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding FilterIdValue}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </StackPanel>

                        <!-- ID Filter -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="15,0,0,15">
                            <TextBlock Text="Filter by ID:" 
                                      FontSize="14" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                                    <RadioButton IsChecked="{Binding IsLessThanSelected}" 
                                                GroupName="IDFilter" 
                                                HorizontalAlignment="Center"/>
                                    <TextBlock Text="Less than" 
                                              FontSize="10" 
                                              HorizontalAlignment="Center" 
                                              Margin="0,3,0,0"/>
                                </StackPanel>

                                <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                                    <RadioButton IsChecked="{Binding IsGreaterThanSelected}" 
                                                GroupName="IDFilter" 
                                                HorizontalAlignment="Center"/>
                                    <TextBlock Text="Greater than" 
                                              FontSize="10" 
                                              HorizontalAlignment="Center" 
                                              Margin="0,3,0,0"/>
                                </StackPanel>

                                <StackPanel Orientation="Vertical">
                                    <RadioButton IsChecked="{Binding IsEqualSelected}" 
                                                GroupName="IDFilter" 
                                                HorizontalAlignment="Center"/>
                                    <TextBlock Text="Equal to" 
                                              FontSize="10" 
                                              HorizontalAlignment="Center" 
                                              Margin="0,3,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- ID Value and Clear Button -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,0">
                            <Grid>
                                <ComboBox ItemsSource="{Binding FilterTypes}"
                                          SelectedItem="{Binding SelectedFilterType}"
                                          DisplayMemberPath="Name"
                                          Style="{StaticResource ModernComboBox}"/>
                                 <TextBlock
                                          Foreground="Gray" 
                                          VerticalAlignment="Center" 
                                          Margin="12,0,0,0"
                                          IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedFilterType.Name}" Value="All types">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </StackPanel>

                        <Button Grid.Row="1" Grid.Column="1" 
                               Content="Clear Filters" 
                               Command="{Binding ClearFiltersCommand}"
                               Style="{StaticResource DangerButton}"
                               HorizontalAlignment="Left"
                               Width="120"
                               Margin="15,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- 3. ADD ENTITY FORM -->
            <Border Background="White" 
                    BorderBrush="#D8DEE9" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="25">
                <StackPanel>
                    <TextBlock Text="Add New Entity" 
                              FontSize="18" 
                              FontWeight="SemiBold" 
                              Foreground="#2E3440" 
                              Margin="0,0,0,20"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- ID Field -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                  Text="Entity ID:" 
                                  FontWeight="SemiBold"
                                  VerticalAlignment="Center" 
                                  Margin="0,0,15,15"/>
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,15">
                            <Grid>
                                <TextBox Text="{Binding NewEntityId, UpdateSourceTrigger=PropertyChanged}" 
                                        Style="{StaticResource ModernTextBox}"/>
                                <TextBlock Text="Enter unique ID..." 
                                          Foreground="Gray" 
                                          VerticalAlignment="Center" 
                                          Margin="12,0,0,0"
                                          IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding NewEntityId}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding NewEntityId}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <TextBlock Text="{Binding IdValidationMessage}" 
                                      FontSize="12" 
                                      Foreground="#BF616A" 
                                      Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Name Field -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                  Text="Entity Name:" 
                                  FontWeight="SemiBold"
                                  VerticalAlignment="Center" 
                                  Margin="0,0,15,15"/>
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,15">
                            <Grid>
                                <TextBox Text="{Binding NewEntityName, UpdateSourceTrigger=PropertyChanged}" 
                                        Style="{StaticResource ModernTextBox}"/>
                                <TextBlock Text="Enter entity name..." 
                                          Foreground="Gray" 
                                          VerticalAlignment="Center" 
                                          Margin="12,0,0,0"
                                          IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding NewEntityName}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding NewEntityName}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <TextBlock Text="{Binding NameValidationMessage}" 
                                      FontSize="12" 
                                      Foreground="#BF616A" 
                                      Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Type Field -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                  Text="Entity Type:" 
                                  FontWeight="SemiBold"
                                  VerticalAlignment="Center" 
                                  Margin="0,0,15,15"/>
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,15">
                            <Grid>
                                <ComboBox ItemsSource="{Binding AvailableTypes}"
                                         SelectedItem="{Binding NewEntityType}"
                                         DisplayMemberPath="Name"
                                         Style="{StaticResource ModernComboBox}"/>
                                <TextBlock Text="Select entity type..." 
                                          Foreground="Gray" 
                                          VerticalAlignment="Center" 
                                          Margin="12,0,0,0"
                                          IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding NewEntityType}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <TextBlock Text="{Binding TypeValidationMessage}" 
                                      FontSize="12" 
                                      Foreground="#BF616A" 
                                      Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Add Button -->
                        <Button Grid.Row="3" Grid.Column="1" 
                               Content="Add Entity" 
                               Command="{Binding AddEntityCommand}"
                               Style="{StaticResource RoundedButton}"
                               HorizontalAlignment="Left"
                               Width="140"
                               Margin="0,10,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>