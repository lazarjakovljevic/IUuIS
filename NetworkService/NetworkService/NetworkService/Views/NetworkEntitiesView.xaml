<UserControl x:Class="NetworkService.Views.NetworkEntitiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkService.Views"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="600">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- Header -->
            <TextBlock Text="📊 Network Entities Management" 
                      FontSize="22" 
                      FontWeight="Bold" 
                      Foreground="#2E3440" 
                      Margin="0,0,0,20"/>

            <!-- Add Entity Form -->
            <Border Background="White" 
                    BorderBrush="#D8DEE9" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="➕ Add New Entity" 
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Foreground="#2E3440" 
                              Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- ID Field -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                  Text="ID:" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,10,10"/>
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,10">
                            <TextBox Text="{Binding NewEntityId, UpdateSourceTrigger=PropertyChanged}" 
                                    Height="30"/>
                            <TextBlock Text="{Binding IdValidationMessage}" 
                                      FontSize="11" 
                                      Foreground="Red" 
                                      Margin="0,2,0,0"/>
                        </StackPanel>

                        <!-- Name Field -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                  Text="Name:" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,10,10"/>
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,10">
                            <TextBox Text="{Binding NewEntityName, UpdateSourceTrigger=PropertyChanged}" 
                                    Height="30"/>
                            <TextBlock Text="{Binding NameValidationMessage}" 
                                      FontSize="11" 
                                      Foreground="Red" 
                                      Margin="0,2,0,0"/>
                        </StackPanel>

                        <!-- Type Field -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                  Text="Type:" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,10,10"/>
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,10">
                            <ComboBox ItemsSource="{Binding AvailableTypes}"
                                     SelectedItem="{Binding NewEntityType}"
                                     DisplayMemberPath="Name"
                                     Height="30"/>
                            <TextBlock Text="{Binding TypeValidationMessage}" 
                                      FontSize="11" 
                                      Foreground="Red" 
                                      Margin="0,2,0,0"/>
                        </StackPanel>

                        <!-- Add Button -->
                        <Button Grid.Row="3" Grid.Column="1" 
                               Content="Add Entity" 
                               Command="{Binding AddEntityCommand}"
                               Background="#5E81AC" 
                               Foreground="White" 
                               Height="35" 
                               BorderThickness="0" 
                     
                               Cursor="Hand"
                               HorizontalAlignment="Left"
                               Width="120"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Filters -->
            <Border Background="White" 
                    BorderBrush="#D8DEE9" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="15"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="🔍 Filters" 
                              FontSize="14" 
                              FontWeight="SemiBold" 
                              Foreground="#2E3440" 
                              Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Type Filter -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                            <TextBlock Text="Filter by Type:" FontSize="12" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding FilterTypes}"
                                     SelectedItem="{Binding SelectedFilterType}"
                                     DisplayMemberPath="Name"
                                     Height="25"/>
                        </StackPanel>

                        <!-- ID Filter -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,10">
                            <TextBlock Text="Filter by ID:" FontSize="12" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <RadioButton Content="&lt;" 
                                           IsChecked="{Binding IsLessThanSelected}" 
                                           GroupName="IDFilter" 
                                           Margin="0,0,10,0"/>
                                <RadioButton Content="&gt;" 
                                           IsChecked="{Binding IsGreaterThanSelected}" 
                                           GroupName="IDFilter" 
                                           Margin="0,0,10,0"/>
                                <RadioButton Content="=" 
                                           IsChecked="{Binding IsEqualSelected}" 
                                           GroupName="IDFilter"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- ID Value and Clear Button -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                            <TextBox Text="{Binding FilterIdValue, UpdateSourceTrigger=PropertyChanged}" 
                                    Height="25" 
                                    Width="100" 
                                    HorizontalAlignment="Left"/>
                        </StackPanel>

                        <Button Grid.Row="1" Grid.Column="1" 
                               Content="Clear Filters" 
                               Command="{Binding ClearFiltersCommand}"
                               Background="#BF616A" 
                               Foreground="White" 
                               Height="25" 
                               BorderThickness="0" 
                               
                               Cursor="Hand"
                               HorizontalAlignment="Left"
                               Width="100"
                               Margin="10,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Entities Table -->
            <Border Background="White" 
                    BorderBrush="#D8DEE9" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="10">
                <StackPanel>
                    <Grid Margin="0,0,0,10">
                        <TextBlock Text="📋 Entities List" 
                                  FontSize="16" 
                                  FontWeight="SemiBold" 
                                  Foreground="#2E3440" 
                                  HorizontalAlignment="Left"/>

                        <Button Content="🗑️ Delete Selected" 
                               Command="{Binding DeleteEntityCommand}"
                               Background="#BF616A" 
                               Foreground="White" 
                               Height="30" 
                               BorderThickness="0" 
                               
                               Cursor="Hand"
                               HorizontalAlignment="Right"
                               Padding="10,0"/>
                    </Grid>

                    <DataGrid ItemsSource="{Binding FilteredEntities}" 
                             SelectedItem="{Binding SelectedEntity}"
                             AutoGenerateColumns="False" 
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             GridLinesVisibility="Horizontal"
                             HeadersVisibility="Column"
                             SelectionMode="Single"
                             Height="300">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" 
                                               Binding="{Binding Id}" 
                                               Width="60" 
                                               IsReadOnly="True"/>
                            <DataGridTextColumn Header="Name" 
                                               Binding="{Binding Name}" 
                                               Width="*" 
                                               IsReadOnly="True"/>
                            <DataGridTextColumn Header="Type" 
                                               Binding="{Binding Type.Name}" 
                                               Width="120" 
                                               IsReadOnly="True"/>
                            <DataGridTextColumn Header="Current Value (kWh)" 
                                               Binding="{Binding CurrentValue, StringFormat=F2}" 
                                               Width="140" 
                                               IsReadOnly="True"/>
                            <DataGridTextColumn Header="Status" 
                                               Binding="{Binding ValueStatus}" 
                                               Width="80" 
                                               IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="Alert">
                                                <Setter Property="Foreground" Value="Red"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Trigger>
                                            <Trigger Property="Text" Value="Normal">
                                                <Setter Property="Foreground" Value="Green"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>