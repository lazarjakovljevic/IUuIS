<Window x:Class="NetworkService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkService"
        mc:Ignorable="d"
        Title="Network Infrastructure System" 
        Height="900" Width="600"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <!-- Header bar with navigation -->
            <RowDefinition Height="80"/>
            <!-- Main content area -->
            <RowDefinition Height="*"/>
            
            <!-- Bottom navigation bar -->
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- Header Bar -->
        <Border Grid.Row="0" Background="#2E3440">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>

                <!-- Home Button -->
                <Button Grid.Column="0" 
                        Name="HomeButton"
                        Background="Transparent" 
                        BorderThickness="0"
                        Command="{Binding HomeCommand}"
                        Cursor="Hand"
                        ToolTip="Home">
                    <StackPanel>
                        <TextBlock Text="🏠" FontSize="24" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="Home" FontSize="10" HorizontalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                </Button>

                <!-- Title -->
                <TextBlock Grid.Column="1" 
                          Text="Network Service" 
                          FontSize="20" 
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>

                <!-- Undo Button -->
                <Button Grid.Column="2" 
        Name="UndoButton"
        Background="#2E3440" 
        BorderThickness="0"
        Command="{Binding UndoCommand}"
        Cursor="Hand"
        ToolTip="Undo">
                    <StackPanel>
                        <TextBlock Text="↶" FontSize="24" HorizontalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CanUndoActions}" Value="False">
                                            <Setter Property="Foreground" Value="#888888"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="Undo" FontSize="10" HorizontalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CanUndoActions}" Value="False">
                                            <Setter Property="Foreground" Value="#888888"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Background="#ECEFF4">
            <ContentControl Content="{Binding CurrentViewModel}"/>
        </Grid>

        <!-- Bottom Navigation Menu -->
        <Border Grid.Row="2" Background="#3B4252" BorderBrush="#4C566A" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Network Entities Button -->
                <Button Grid.Column="0" 
                        Background="Transparent" 
                        BorderThickness="0"
                        Command="{Binding NavCommand}"
                        CommandParameter="entities"
                        Cursor="Hand">
                    <StackPanel>
                        <TextBlock Text="📊" FontSize="20" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="Entities" FontSize="11" HorizontalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                </Button>

                <!-- Network Display Button -->
                <Button Grid.Column="1" 
                        Background="Transparent" 
                        BorderThickness="0"
                        Command="{Binding NavCommand}"
                        CommandParameter="display"
                        Cursor="Hand">
                    <StackPanel>
                        <TextBlock Text="🌐" FontSize="20" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="Network" FontSize="11" HorizontalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                </Button>

                <!-- Measurement Graph Button -->
                <Button Grid.Column="2" 
                        Background="Transparent" 
                        BorderThickness="0"
                        Command="{Binding NavCommand}"
                        CommandParameter="graph"
                        Cursor="Hand">
                    <StackPanel>
                        <TextBlock Text="📈" FontSize="20" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="Graph" FontSize="11" HorizontalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>