<UserControl x:Class="NetworkService.Controls.VirtualKeyboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Width="565" Height="280"
             d:DesignHeight="280" d:DesignWidth="560">

    <!-- #region Keyboard Resources -->
    <UserControl.Resources>
        <!-- Keyboard Key Style -->
        <Style x:Key="KeyboardKeyStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FFF0F0F0"/>
            <Setter Property="BorderBrush" Value="#FF404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="MinHeight" Value="35"/>
            <Setter Property="MinWidth" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="KeyBorder" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="KeyBorder" Property="Background" Value="#FF0E7DAE"/>
                                <Setter TargetName="KeyBorder" Property="BorderBrush" Value="#FF1BADF8"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <!-- Pressed Effect -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="KeyBorder" Property="Background" Value="#FF0A5A84"/>
                                <Setter TargetName="KeyBorder" Property="BorderBrush" Value="#FF1BADF8"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="KeyBorder" Property="Background" Value="#FF1E1E1E"/>
                                <Setter TargetName="KeyBorder" Property="BorderBrush" Value="#FF2A2A2A"/>
                                <Setter Property="Foreground" Value="#FF808080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Special Key Style (Space, Enter, etc.) -->
        <Style x:Key="SpecialKeyStyle" TargetType="Button" BasedOn="{StaticResource KeyboardKeyStyle}">
            <Setter Property="Background" Value="#FF404040"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Action Key Style (Backspace, Clear) -->
        <Style x:Key="ActionKeyStyle" TargetType="Button" BasedOn="{StaticResource KeyboardKeyStyle}">
            <Setter Property="Background" Value="#FF8B4513"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </UserControl.Resources>
    <!-- #endregion -->

    <!-- #region Main Keyboard Layout -->
    <Border Background="#FF1E1E1E" 
            BorderBrush="#FF404040" 
            BorderThickness="0" 
            CornerRadius="0"
            Width="565" Height="280"
            Margin="0,0,15,0">
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <!-- Header with close button -->
                <RowDefinition Height="Auto"/>
                <!-- Number Row -->
                <RowDefinition Height="Auto"/>
                <!-- First Letter Row (QWERTY) -->
                <RowDefinition Height="Auto"/>
                <!-- Second Letter Row (ASDF) -->
                <RowDefinition Height="Auto"/>
                <!-- Third Letter Row (ZXCV) -->
                <RowDefinition Height="Auto"/>
                <!-- Space and Action Row -->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- #region Header Row -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Text="Virtual Keyboard" 
                          Foreground="#FFF0F0F0" 
                          FontSize="14" 
                          FontWeight="Bold"
                          VerticalAlignment="Center"/>

                <Button Grid.Column="1" 
                        Name="CloseButton"
                        Content="✕" 
                        Style="{StaticResource ActionKeyStyle}"
                        Width="30" Height="25"
                        Click="CloseButton_Click"
                        ToolTip="Close virtual keyboard"/>
            </Grid>
            <!-- #endregion -->

            <!-- #region Number Row -->
            <UniformGrid Grid.Row="1" Rows="1" Columns="10" Margin="0,0,0,4">
                <Button Content="1" Style="{StaticResource KeyboardKeyStyle}" Click="NumberKey_Click"/>
                <Button Content="2" Style="{StaticResource KeyboardKeyStyle}" Click="NumberKey_Click"/>
                <Button Content="3" Style="{StaticResource KeyboardKeyStyle}" Click="NumberKey_Click"/>
                <Button Content="4" Style="{StaticResource KeyboardKeyStyle}" Click="NumberKey_Click"/>
                <Button Content="5" Style="{StaticResource KeyboardKeyStyle}" Click="NumberKey_Click"/>
                <Button Content="6" Style="{StaticResource KeyboardKeyStyle}" Click="NumberKey_Click"/>
                <Button Content="7" Style="{StaticResource KeyboardKeyStyle}" Click="NumberKey_Click"/>
                <Button Content="8" Style="{StaticResource KeyboardKeyStyle}" Click="NumberKey_Click"/>
                <Button Content="9" Style="{StaticResource KeyboardKeyStyle}" Click="NumberKey_Click"/>
                <Button Content="0" Style="{StaticResource KeyboardKeyStyle}" Click="NumberKey_Click"/>
            </UniformGrid>
            <!-- #endregion -->

            <!-- #region First Letter Row (QWERTY) -->
            <UniformGrid Grid.Row="2" Rows="1" Columns="10" Margin="0,0,0,4">
                <Button Content="Q" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Content="W" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Content="E" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Content="R" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Content="T" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Content="Y" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Content="U" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Content="I" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Content="O" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Content="P" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
            </UniformGrid>
            <!-- #endregion -->

            <!-- #region Second Letter Row (ASDF) -->
            <Grid Grid.Row="3" Margin="0,0,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.5*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Content="A" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Grid.Column="2" Content="S" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Grid.Column="3" Content="D" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Grid.Column="4" Content="F" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Grid.Column="5" Content="G" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Grid.Column="6" Content="H" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Grid.Column="7" Content="J" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Grid.Column="8" Content="K" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Grid.Column="9" Content="L" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
            </Grid>
            <!-- #endregion -->

            <!-- #region Third Letter Row (ZXCV) -->
            <Grid Grid.Row="4" Margin="0,0,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Shift" Style="{StaticResource SpecialKeyStyle}" Click="ShiftKey_Click"/>
                <Button Grid.Column="1" Content="Z" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Grid.Column="2" Content="X" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Grid.Column="3" Content="C" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Grid.Column="4" Content="V" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Grid.Column="5" Content="B" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Grid.Column="6" Content="N" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Grid.Column="7" Content="M" Style="{StaticResource KeyboardKeyStyle}" Click="LetterKey_Click"/>
                <Button Grid.Column="8" Content="⌫" Style="{StaticResource ActionKeyStyle}" Click="BackspaceKey_Click" ToolTip="Backspace"/>
            </Grid>
            <!-- #endregion -->

            <!-- #region Action Row -->
            <Grid Grid.Row="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="1.2*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="123" Style="{StaticResource SpecialKeyStyle}" Click="NumberModeKey_Click" ToolTip="Switch to numbers"/>
                <Button Grid.Column="1" Content="Space" Style="{StaticResource SpecialKeyStyle}" Click="SpaceKey_Click"/>
                <Button Grid.Column="2" Content="." Style="{StaticResource KeyboardKeyStyle}" Click="PeriodKey_Click"/>
                <Button Grid.Column="3" Content="Enter" Style="{StaticResource ActionKeyStyle}" Click="EnterKey_Click"/>
            </Grid>
            <!-- #endregion -->
        </Grid>
    </Border>
    <!-- #endregion -->
</UserControl>